        <script src="/js/notify-combined.min.js"></script>
        <script type="text/javascript">

            //jQuery.notify.notify("Click me!", { position: "bottom right", className: "success" });
            $(document).ready(function () {
                //$("#FileUploadForm").submit(function (e) {
                //    e.preventDefault();
                //});

                //    //function will be called on button click having id btnsave
                $("#UploadButon").click(function () {
                    debugger;
                    ShowLoader();
                    var fileUpload = $("#FileUpload").get(0);
                    var files = fileUpload.files;
                    if (files.length == 0) {

                        //jQuery.notify.notify.defaults({ globalPosition: 'bottom right' });
                        jQuery.notify("Please upload a file first!", { position: "bottom right", className: "warn" });
                    }
                    if (files.length != 0) {
                        var fileData = new FormData();

                        // Looping over all files and add it to FormData object
                        for (var i = 0; i < files.length; i++) {
                            fileData.append(files[i].name, files[i]);
                        }
                        fileData.append('username', 'ashhad');

                        $.ajax(
                            {
                                type: "Post", //HTTP POST Method
                                url: "SpeechTOText", // Controller/View
                                contentType: false, // Not to set any content header
                                processData: false, // Not to process data
                                data: fileData,
                                success: function (response) {
                                    if (response != "") {
                                        debugger;
                                        $('#validationTextarea')[0].innerText = response;
                                        $('#texttospeechDiv')[0].style.display = "block";

                                        $('#cost')[0].innerHTML = 'COST : ' + Math.floor(Math.random() * 100) + '$';
                                        HideLoader();
                                    }
                                    else {

                                        HideLoader();
                                    }
                                }
                            });
                    }

                });

                $("#SaveProject").click(function () {
                    debugger;

                    ShowLoader();
                    var text = $('#validationTextarea')[0].value;
                    var ProjectName = $('#ProjectName')[0].value;
                    var voiceId = $('#Voice').find(":selected").val();
                    if (ProjectName == "") {
                        jQuery.notify("Provide a name please", { position: "bottom right", className: "warn" });
                    }
                    else if (text != "" && voiceId != "") {
                        $.ajax(
                            {
                                type: "Post", //HTTP POST Method
                                url: "ConvertTextToSpeech", // Controller/View
                                dataType: "json",
                                data: {
                                    text: text,
                                    VoiceId: voiceId,
                                    projectName: ProjectName,
                                    ProjectType: "Speech To Speech"
                                },
                                success: function (response) {
                                    debugger;
                                    if (response != false) {
                                        jQuery.notify("Project Created Successfully", { position: "bottom right", className: "success" });
                                        window.location = "/Home/Dashboard";
                                        HideLoader();
                                        debugger;
                                    }
                                    else {
                                        jQuery.notify("Please try again", { position: "bottom right", className: "warn" });
                                        HideLoader();
                                    }
                                }
                            });
                    }

                });

                $("#Gender").change(function () {
                    debugger;

                    ShowLoader();
                    var gender = this.value;
                    if (gender == "") {

                        //jQuery.notify.notify.defaults({ globalPosition: 'bottom right' });
                        jQuery.notify("Please Select a valid Gender", { position: "bottom right", className: "warn" });
                    }
                    if (gender != "") {
                        $.ajax(
                            {
                                type: "Get", //HTTP POST Method
                                url: "GetLanguagesAgainstGender", // Controller/View
                                data: { gender: gender },
                                dataType: "json",
                                success: function (response) {
                                    if (response) {
                                        debugger;
                                        document.getElementById('Language').innerHTML = "";
                                        for (var i = 0; i < response.length; i++) {
                                            var opt = document.createElement('option');
                                            opt.value = response[i].languageCode;
                                            opt.innerHTML = response[i].languageName;
                                            document.getElementById('Language').appendChild(opt);
                                            HideLoader();
                                        }
                                    }
                                    else {
                                        jQuery.notify("Please try again", { position: "bottom right", className: "warn" });
                                        HideLoader();
                                    }
                                }
                            });
                    }

                    HideLoader();
                });
                $("#Language").change(function () {
                    debugger;

                    ShowLoader();
                    var Language = this.value;
                    var gender = $('#Gender').find(":selected").val();
                    if (Language == "") {
                        jQuery.notify("Please Select a valid Language", { position: "bottom right", className: "warn" });
                    }
                    if (gender == "") {
                        jQuery.notify("Please Select a valid Gender", { position: "bottom right", className: "warn" });
                    }
                    if (gender != "" && Language != "") {
                        $.ajax(
                            {
                                type: "Get", //HTTP POST Method
                                url: "getVoicesAgainstLangugae", // Controller/View
                                data: { LanguageCode: Language, gender: gender },
                                dataType: "json",
                                success: function (response) {
                                    if (response) {
                                        document.getElementById('Voice').innerHTML = "";
                                        debugger;
                                        for (var i = 0; i < response.length; i++) {
                                            var opt = document.createElement('option');
                                            opt.value = response[i].id;
                                            opt.innerHTML = response[i].name;
                                            document.getElementById('Voice').appendChild(opt);
                                        }
                                        HideLoader();
                                    }
                                    else {
                                        jQuery.notify("Please try again", { position: "bottom right", className: "warn" });
                                        HideLoader();
                                    }
                                }
                            });
                    }

                });

                $("#Voice").change(function () {
                    debugger;
                    var Voice = this.value;
                    if (Voice != "") {
                        $('#validationTextarea')[0].disabled = false;
                    }
                });
                $("#play").click(function () {
                    debugger;
                    ShowLoader();
                    var text = $('#validationTextarea')[0].value;
                    var ProjectName = $('#ProjectName')[0].value;
                    var voiceId = $('#Voice').find(":selected").val();
                    if (ProjectName == "") {
                        jQuery.notify("Provide a name please", { position: "bottom right", className: "warn" });
                    }
                    else if (text != "" && voiceId != "") {
                        $.ajax(
                            {
                                type: "Post", //HTTP POST Method
                                url: "PlayAudio", // Controller/View
                                dataType: "json",
                                data: {
                                    text: text,
                                    VoiceId: voiceId,
                                    projectName: ProjectName,
                                    ProjectType: "TextToSpeech"
                                },
                                success: function (response) {
                                    debugger;
                                    if (response != false) {
                                        debugger;
                                        $('#player')[0].disabled = false;
                                        $('#AudioStream')[0].src = response;
                                        $('#player')[0].load();
                                        $('#player')[0].play();

                                        HideLoader();
                                        $/*('#AudioStream')[0].oncanplaythrough=audio[0].play();*/
                                    }
                                    else {
                                        jQuery.notify("Please try again", { position: "bottom right", className: "warn" });
                                        HideLoader();
                                    }
                                }
                            });
                    }
                });
            });
        </script>
