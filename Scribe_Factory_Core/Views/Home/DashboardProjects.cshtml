@model IEnumerable<Scribe_Factory_Core.Models.Project>



@foreach (var item in Model)
{
    <div class="col-md-4" style=" margin-bottom: 20px;">
        <div class="projects-main-div">
            <div class="row">
                <div class="col-2">
                    <div class="img-div">
                        @if (item.ProjectType == "Speech To Text")
                        {
                            <img src="~/img/speechtotext.png" style="width:60px;height:60px" />
                        }
                        else if (item.ProjectType == "Text To Text")
                        {
                            <img src="~/img/texttotext.png" style="width: 60px; height: 60px" />
                        }
                        else if (item.ProjectType == "Text To Speech")
                        {
                            <img src="~/img/texttospeech.png" style="width: 60px; height: 60px" />
                        }
                        else if (item.ProjectType == "Speech To Speech")
                        {
                            <img src="~/img/speechtospeech.png" style="width: 60px; height: 60px" />
                        }
                    </div>
                </div>
                <div class="col-10 my-auto prjctFlex">
                    <div class="prjct-name">
                        <div>
                            <p>
                                @item.ProjectName
                            </p>
                            <p style="margin-bottom:2px">@item.ProjectType</p>
                            <p style="font-size: 12px; font-family: 'Mulish'; letter-spacing: 0.005em; font-weight: 600;">Created On: @item.CreatedOn.ToString("dd MMMM yyyy")</p>
                        </div>


                    </div>
                    <button title="Download File" class="downloadbutton" type="button" onclick="location.href='@Url.Action("GetDocumentFromS3", "Home", new { projectid = item.Id })'">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                            <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
                            <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>

    </div>
}